# open new terminal window
alt - return : kitty ~
# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

#change focus between external displays (left and right)
shift + alt - h: yabai -m display --focus west
shift + alt - l: yabai -m display --focus east

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# swap windows
# shift + alt - j : yabai -m window --swap south
# shift + alt - k : yabai -m window --swap north
# shift + alt - h : yabai -m window --swap west
# shift + alt - l : yabai -m window --swap east

# move window to space #
ctrl + shift - 1 : yabai -m window --space 1;
ctrl + shift - 2 : yabai -m window --space 2;
ctrl + shift - 3 : yabai -m window --space 3;
ctrl + shift - 4 : yabai -m window --space 4;
ctrl + shift - 5 : yabai -m window --space 5;
ctrl + shift - 6 : yabai -m window --space 6;
ctrl + shift - 7 : yabai -m window --space 7;
ctrl + shift - 8 : yabai -m window --space 8;
ctrl + shift - 9 : yabai -m window --space 9;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

# shift + alt - p : osascript ~/.config/skhd/simple.workflow
shift + alt - o : osascript ~/.config/skhd/password.workflow
ctrl + shift + alt - o: osascript ~/.config/skhd/type_clipboard.workflow

ctrl - i: open -a Mission\ Control

