set $mod Mod1
floating_modifier $mod
font pango:monospace 8

exec --no-startup-id nm-applet
# exec --no-startup-id sudo mullvad-vpn
exec --no-startup-id greenclip daemon

exec_always --no-startup-id hsetroot -solid "#000000"
exec_always --no-startup-id xinput set-button-map 10 1 1 3 4 5 6 7
exec_always --no-startup-id setxkbmap -model abnt2 -layout br -variant abnt2

exec --no-startup-id xrandr --output eDP-1 --mode 1366x768
exec --no-startup-id xrandr --output HDMI-1 --mode 1920x1080

exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

bindsym Print  exec "flameshot gui"
bindsym $mod+Escape exec "i3lock -c 000000"
bindsym $mod+Shift+Return exec "brave-browser-beta"
bindsym $mod+d exec "dmenu_run"
bindsym $mod+Return exec "kitty --single-instance"
bindsym $mod+c exec ¨cat /tmp/greenclip/history | dmenu -l 10¨

bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+v split v
bindsym $mod+k focus up
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+l focus right
bindsym $mod+a focus parent
bindsym $mod+shift+k move up
bindsym $mod+Shift+v split h
bindsym $mod+w layout tabbed
bindsym $mod+shift+h move left
bindsym $mod+shift+j move down
bindsym $mod+s layout stacking
bindsym $mod+shift+l move right
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+a focus child
bindsym $mod+e layout toggle split
bindsym $mod+Shift+s sticky toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+r resize set 640 px 360 px
bindsym $mod+Control+l resize grow width 10 px or 10 ppt
bindsym $mod+Control+j resize grow height 10 px or 10 ppt
bindsym $mod+Control+h resize shrink width 10 px or 10 ppt
bindsym $mod+Control+k resize shrink height 10 px or 10 ppt
bindsym $mod+Control+Shift+l resize grow width 1 px or 1 ppt
bindsym $mod+Control+Shift+j resize grow height 1 px or 1 ppt
bindsym $mod+Control+Shift+h resize shrink width 1 px or 1 ppt
bindsym $mod+Control+Shift+k resize shrink height 1 px or 1 ppt

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

for_window [class="^.*"] border pixel 1
for_window [class="^.*"] floating enable
for_window [class="kitty"] resize set 640 px 360 px
for_window [instance="brave-browser-beta"] exec "sh -c \
    'sleep 0.5;\
    i3-msg \[instance=brave-browser-beta\] fullscreen disable'"

bar {
  position top
  i3bar_command i3bar -t
  status_command i3blocks
  font pango:monospace 10 
  colors {
    background #00000000
    urgent_workspace #00000000 #008B8B #fdf6e3
    focused_workspace #00000000 #008B8B #fdf6e3
    active_workspace #00000000 #00000000 #fdf6e3
    inactive_workspace #00000000 #00000000 #fdf6e388
  }
}

gaps inner 5
gaps outer 5
focus_follows_mouse no
